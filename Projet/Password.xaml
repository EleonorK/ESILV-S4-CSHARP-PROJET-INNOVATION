<Window x:Class="Projet.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inscription" Height="258.533" Width="300">
    <StackPanel Margin="10">
        <Label Background="Black" FontFamily="Times New Roman" Foreground="#FFFFF823">Nom
        </Label>
        <TextBox Name ="labelNom"/>
        <Label>Mot de passe</Label>
        <PasswordBox Name ="mdp"/>
        <Label>Confirmer mot de passe</Label>
        <PasswordBox Name ="mdpConfirmer" />
        <Button Content="OK" Click="Button_Click" Margin="0,0,-0.4,0" Background="#FFBDCB52" BorderBrush="#FFFF5D5D" FontFamily="Rockwell Extra Bold" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" OpacityMask="#FF885151"/>
    </StackPanel>
</Window>
