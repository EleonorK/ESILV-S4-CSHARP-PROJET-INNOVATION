  Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
  Margin="155,134,169.6,265.4" RenderTransformOrigin="0.438,0.572" Height="Auto" Width="Auto" Foreground="#DDFFFFFF">
            <materialDesign:PackIcon
    Kind="Check" Height="38" Width="30" RenderTransformOrigin="0.661,0.387" />
